<div id="js-fb-block-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Block User</h3>
  </div>
  <%= form_for :user ,:url => facebook_block_path, :remote => true,:html => {:id => 'js-fb-block-form'} do |f| %>
    <div class="modal-body">
      <p class='js-confirm'>Block <b></b> from your facebook page?</p>
      <%= f.hidden_field :identifier,:class => 'js-user-name' %>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <%= f.submit 'Block',:class => 'btn btn-danger'  %>
    </div>
  <% end %>
</div>
