<%= render 'social_apps/twitter/sub_nav',:social_app => @social_app %>
<%= form_for(:settings,:url => twitter_update_settings_path(@social_app),:html => {:class => 'form-horizontal'}) do |f| %>
  <legend>Twitter App Settings</legend>
  <div class='control-group'>
    <%= f.label :search_terms,'Search Terms',:class => 'control-label' %>
    <div class='controls'>
      <%= f.text_field(:search_terms,:value => @social_app.settings['search_terms'])%>
        <span class="help-inline">
          <a href="#searchtips_modal" role="button" data-toggle="modal">Tip</a>
        </span>
    </div>
  </div>
  <div class='control-group'>
    <div class='controls'>
      <%= f.submit 'Save' ,:class => 'btn' %>
    </div>
  </div>
<% end %>


<div id='searchtips_modal' class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Search Operators</h3>
  </div>
  <div class="modal-body">
    <%= render 'social_apps/twitter/advanced_search_tips' %>
  </div>
  <div class="modal-footer">
    <a href="#" data-dismiss="modal" aria-hidden="true" class="btn btn-primary">Close</a>
  </div>
</div>
